@model List<Entidades.Producto>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Listar</title>
</head>
<body>
    <h3>Listado de productos</h3>
    <div>
        <table>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Nombre
                </th>
                <th>
                    Cantidad
                </th>
                <th>
                    Precio
                </th>
                <th>
                    Fecha alta
                </th>
                <th>
                    idTipo
                </th>
            </tr>
            @foreach (Entidades.Producto p in @Model)
            {
        <tr>
            <td>
                @p.id
            </td>
            <td>
                @p.nombre
            </td>
            <td>
                @p.cantidad
            </td>
            <td>
                @p.precio
            </td>
            <td>
                @p.fechaAlta
            </td>
            <td>
                @p.IdTipo
            </td>
            <td>
                <a href="/Productos/Modificar/@p.id">
                    <input type="button" name="name" value="Modificar" />
                </a>
            </td>
            <td>
                <a href="/Productos/Eliminar/@p.id">
                    <input type="button" name="name" value="Eliminar" />
                </a>
            </td>
        </tr>
            }
        </table>
        <a href="/Productos/Crear">
            <input type="button" name="name" value="Crear" />
        </a>
    </div>
</body>
</html>
